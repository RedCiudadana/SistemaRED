	<script>
	
    var inputs = document.querySelectorAll("[id='montos']");
	
	
    var sumar = 0;            

    for(var i=0; i<inputs.length; i++) {
        sumar += parseInt((inputs[i]).innerHTML);
    }

    document.getElementById('finanT').innerHTML = sumar.toString();

	
	</script>

	<!--CONVIERTE NUMEROS A NUMEROS SEPARADOS POR COMAS-->
	<script>
    var total = document.getElementById('finanT');
    var totalcoms;            
    totalcoms=total.innerHTML;
	totalcoms = parseInt(totalcoms);
    document.getElementById('finanT').innerHTML = totalcoms.toLocaleString('en-US');

	var totalA = document.getElementById('finanA');
    var totalcomsA;            
    totalcomsA=totalA.innerHTML;
	totalcomsA = parseInt(totalcomsA);
    document.getElementById('finanA').innerHTML = totalcomsA.toLocaleString('en-US');

	var meses = document.querySelectorAll("[id='montosm']");
	meses.forEach((mes) => {
		var mescoms;            
